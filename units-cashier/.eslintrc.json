{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "no-unused-vars": "error",
    "semi": [
      "error"
    ],
    "indent": [
      1,
      4
    ]
  },
  "ignorePatterns": [
    "node_modules/",
    "out/",
    ".next/",
    "src/stories/Page.tsx",
    "*.d.ts",
    "src/components/ui/"
  ]
}